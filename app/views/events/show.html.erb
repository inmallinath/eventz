<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>
<p>
  <strong>Event Date:</strong>
  <%= @event.event_on.strftime('%B %d, %Y') %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start.strftime('%I : %M') %>
</p>
<p>
  <strong>End time:</strong>
  <%= @event.end.strftime('%I : %M') %>
</p>

