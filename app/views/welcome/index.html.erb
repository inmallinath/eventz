<div class="fullscreen-bg">
  <video loop muted autoplay poster="final_shot.png" class="fullscreen-bg__video">
      <source src="/assets/Background.mp4" type="video/mp4">
  </video>
</div>
<div class="container centered" style="position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -50px;
  margin-left: -150px;">
   <div class="col-xs-4">
      <%= simple_form_for 'city', url: city_events_path, method: :get do |f| %>
      <%= f.input "", :collection => @cities.map{|c| [c.city_country, c.id]}, label:false, include_blank: false, input_html: {class: 'form-group'}%>
      <%= f.submit "Explore!", class: 'btn btn-primary col-md-12'%>
      <% end %>
   </div>
</div>
